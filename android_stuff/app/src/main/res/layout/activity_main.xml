<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.sasha.finalsoftware.ui.MainActivity">

    <Button
            android:text="Search Names"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/searchNamesButton"
            android:onClick="swtichToSearchNames"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/getNamesButton" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.501"/>
    <Button
            android:text="View Names"
            android:layout_width="120dp"
            android:layout_height="wrap_content" android:id="@+id/getNamesButton"
            android:onClick="switchToNamesListed"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LikeListButton" android:layout_marginTop="8dp"/>
    <Button
            android:text="My Names"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/LikeListButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="240dp"/>

</android.support.constraint.ConstraintLayout>