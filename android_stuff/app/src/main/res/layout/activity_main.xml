<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.sasha.finalsoftware.ui.MainActivity">

    <Button
            android:text="Search Names"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/searchButton"
            android:onClick="switchToNamesListed"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LikeListButton" android:layout_marginTop="8dp"/>
    <Button
            android:text="My Names"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/LikeListButton" app:layout_constraintStart_toStartOf="@+id/searchButton"
            app:layout_constraintEnd_toEndOf="@+id/searchButton"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="300dp"/>
    <Button
            android:text="Discover Names"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/discoverButton"
            app:layout_constraintTop_toBottomOf="@+id/searchButton" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/searchButton"
            app:layout_constraintStart_toStartOf="@+id/searchButton"/>

</android.support.constraint.ConstraintLayout>