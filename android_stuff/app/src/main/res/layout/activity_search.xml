<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.example.sasha.finalsoftware.ui.SearchActivity">
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:id="@+id/compareName1progress2"
            android:max="100" android:progress="14"
            app:layout_constraintStart_toEndOf="@+id/searchResultName" android:layout_marginStart="68dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchBtn"/>
    <TextView
            android:text="Name:"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/searchResultName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchBtn"/>
    <Button
            android:text="SEARCH"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:id="@+id/searchBtn"
            android:background="#759eff"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:onClick="updateGUI" app:layout_constraintHorizontal_bias="0.496"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchDate2"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:inputType="date"
            android:ems="10"
            android:gravity="center"
            android:id="@+id/searchDate2"
            android:layout_marginEnd="36dp" app:layout_constraintEnd_toEndOf="parent" android:hint="Max Year: 2008"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchName"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:inputType="date"
            android:ems="10"
            android:gravity="center"
            android:id="@+id/searchDate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" android:hint="Min Year: 1880"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/searchNameForm"/>
    <TextView
            android:text="Name:"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:id="@+id/searchNameForm" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="36dp"
            app:layout_constraintEnd_toStartOf="@+id/searchName"
            android:layout_marginEnd="26dp"
            android:textStyle="bold" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="213dp"
            android:layout_height="40dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/searchName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="36dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>