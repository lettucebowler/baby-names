<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/constraintLayout"
        android:weightSum="2">
    <lecho.lib.hellocharts.view.LineChartView

            android:id="@+id/chart"

            android:layout_width="0dp"

            android:layout_height="0dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name2" android:layout_marginTop="8dp"
            app:layout_constraintBottom_toTopOf="@+id/startSpinner" android:layout_marginBottom="16dp"
    />
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/name1" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" android:textSize="24sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/name2"
            app:layout_constraintTop_toBottomOf="@+id/name1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:textSize="24sp"/>
    <Button
            android:text="Recalculate Graph"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/calcButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="End Year"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/endView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:textAlignment="textStart"
            android:textSize="18sp" app:layout_constraintBottom_toTopOf="@+id/calcButton"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Start Year"
            android:layout_width="80dp"
            android:layout_height="wrap_content" android:id="@+id/startView" android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/endView"
            android:layout_marginBottom="8dp"/>
    <TextView
            android:text="0.005"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/maxView" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/chart" app:layout_constraintBottom_toTopOf="@+id/chart"/>
    <TextView
            android:text="0.000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/chart" app:layout_constraintTop_toBottomOf="@+id/chart"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/startSpinner" app:layout_constraintStart_toEndOf="@+id/startView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="@+id/startView"
            app:layout_constraintBottom_toBottomOf="@+id/startView"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/endSpinner"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/endView" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/endView" app:layout_constraintBottom_toBottomOf="@+id/endView"/>

</android.support.constraint.ConstraintLayout>


